{
  "name": "gradiently",
  "description": "A minimal, lightweight colour picker to generate beautiful colours and gradients.",
  "private": false,
  "version": "1.0.8",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "lint:fix": "eslint --fix 'src/**/*.{jsx,ts,tsx}'",
    "format": "prettier --write src//**/*.{ts,tsx,css} --config ./.prettierrc",
    "prepare": "husky install"
  },
  "files": [
    "/dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.umd.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-draggable": "^4.4.6"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "prettier": "^3.2.4",
    "react-hooks": "^1.0.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vite-plugin-dts": "^3.7.1",
    "vite-plugin-linter": "^2.0.7",
    "vite-tsconfig-paths": "^4.3.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/elijahnikov/gradiently"
  },
  "keywords": [
    "gradient",
    "grsdiently",
    "tailwind",
    "react",
    "colorpicker",
    "color picker"
  ],
  "author": "Elijah Nikov",
  "bugs": {
    "url": "https://github.com/elijahnikov/gradiently/issues"
  },
  "homepage": "https://github.com/elijahnikov/gradiently#readme",
  "license": "MIT"
}
